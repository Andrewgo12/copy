# Configuraci√≥n del Sistema CROSS
NODE_ENV=development
PORT=3000

# Base de Datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cross_db
DB_USER=cross_user
DB_PASS=cross_password

# JWT
JWT_SECRET=tu-clave-super-secreta-aqui-cambiar-en-produccion
JWT_EXPIRES_IN=24h

# Redis (opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email SMTP (migrado de CROSSHUV)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-password-de-aplicacion

# Servicios
ENABLE_CRON=true
ENABLE_ALERTS=true
ENABLE_WEBSOCKETS=true

# Archivos
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=storage/uploads

# Logs
LOG_LEVEL=info
LOG_MAX_FILES=14d

# Seguridad
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# URLs
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001