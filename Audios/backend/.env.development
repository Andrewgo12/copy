# Development Configuration for Transcripto KD

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# File Upload Settings
MAX_FILE_SIZE=104857600  # 100MB for development (smaller for faster testing)
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=mp3,wav,m4a,aac,ogg,flac,mp4,mov,avi,mkv,webm,m4v

# AI/ML Settings (optimized for development)
WHISPER_MODEL=base  # Smaller model for faster development
DEVICE=auto  # Let system decide

# Optional: OpenAI API (for enhanced processing)
# OPENAI_API_KEY=your_openai_api_key_here

# Optional: Hugging Face Token (for pyannote models)
# HUGGINGFACE_TOKEN=your_huggingface_token_here

# Processing Settings
MAX_CONCURRENT_JOBS=2  # Reduced for development
CLEANUP_INTERVAL=1800  # 30 minutes
TEMP_FILE_RETENTION=3600  # 1 hour for development

# Database (optional)
DATABASE_URL=sqlite:///./transcripto_dev.db

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/transcripto_dev.log

# Development flags
ENABLE_MOCK_TRANSCRIPTION=False  # Set to True to use mock data for faster testing
SKIP_AUDIO_PROCESSING=False  # Set to True to skip actual audio processing
ENABLE_DETAILED_LOGGING=True
