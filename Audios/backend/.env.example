# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# File Upload Settings
MAX_FILE_SIZE=524288000  # 500MB in bytes
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=mp3,wav,m4a,aac,ogg,flac,mp4,mov,avi,mkv,webm,m4v

# AI/ML Settings
WHISPER_MODEL=large  # tiny, base, small, medium, large
DEVICE=auto  # auto, cpu, cuda

# Optional: OpenAI API (for enhanced processing)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Hugging Face Token (for pyannote models)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Processing Settings
MAX_CONCURRENT_JOBS=3
CLEANUP_INTERVAL=3600  # seconds
TEMP_FILE_RETENTION=86400  # 24 hours in seconds

# Database (optional)
DATABASE_URL=sqlite:///./transcripto.db

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/transcripto.log
