# =============================================================================
# CONFIGURACIÓN DEL AGENTE LOCAL
# =============================================================================

# -----------------------------------------------------------------------------
# APIs de Modelos LLM
# -----------------------------------------------------------------------------
# OpenAI API Key (para GPT-4, GPT-3.5, etc.)
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API Key (para Claude)
ANTHROPIC_API_KEY=your-anthropic-key-here

# Configuración del modelo por defecto
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
MAX_ITERATIONS=10

# -----------------------------------------------------------------------------
# Base de Datos y Almacenamiento
# -----------------------------------------------------------------------------
# Ruta de la base de datos vectorial
VECTOR_DB_PATH=./data/vector_db

# Ruta de la base de datos de caché
CACHE_DB_PATH=./data/cache

# Configuración de PostgreSQL (opcional)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agent_db
POSTGRES_USER=agent_user
POSTGRES_PASSWORD=agent_password

# Configuración de Redis (opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Configuración de Seguridad
# -----------------------------------------------------------------------------
# Habilitar sandbox para ejecución segura
ENABLE_SANDBOX=true

# Requerir confirmación humana para acciones de riesgo
REQUIRE_CONFIRMATION=true

# Tiempo máximo de ejecución por acción (segundos)
MAX_EXECUTION_TIME=300

# Rutas permitidas para operaciones de archivos (separadas por comas)
ALLOWED_PATHS=./,/tmp,~/Documents,~/Desktop

# Comandos bloqueados (separados por comas)
BLOCKED_COMMANDS=rm -rf,del /s,format,shutdown,reboot

# -----------------------------------------------------------------------------
# Configuración de Memoria
# -----------------------------------------------------------------------------
# Habilitar memoria persistente
ENABLE_MEMORY=true

# Umbral de importancia para memoria a largo plazo (0.0-1.0)
MEMORY_IMPORTANCE_THRESHOLD=0.3

# Máximo de entradas en memoria a corto plazo
MAX_SHORT_TERM_MEMORY=100

# -----------------------------------------------------------------------------
# Configuración de Logging
# -----------------------------------------------------------------------------
# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Archivo de logs
LOG_FILE=./data/logs/agent.log

# Habilitar logging detallado de herramientas
ENABLE_TOOL_LOGGING=true

# -----------------------------------------------------------------------------
# Configuración de Interfaces
# -----------------------------------------------------------------------------
# Puerto para API REST
API_PORT=8000

# Puerto para interfaz web Streamlit
WEB_UI_PORT=8501

# Habilitar interfaz web
ENABLE_WEB_UI=true

# Habilitar API REST
ENABLE_REST_API=true

# -----------------------------------------------------------------------------
# Configuración de Herramientas
# -----------------------------------------------------------------------------
# Habilitar herramientas web (búsqueda, fetch)
ENABLE_WEB_TOOLS=true

# API Key para búsquedas web (Google Custom Search)
GOOGLE_SEARCH_API_KEY=your-google-search-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id

# Habilitar herramientas de código
ENABLE_CODE_TOOLS=true

# Habilitar herramientas del sistema
ENABLE_SYSTEM_TOOLS=true

# -----------------------------------------------------------------------------
# Configuración de Docker (para sandbox)
# -----------------------------------------------------------------------------
# Imagen Docker para sandbox
SANDBOX_DOCKER_IMAGE=python:3.11-slim

# Límites de recursos para sandbox
SANDBOX_MEMORY_LIMIT=512m
SANDBOX_CPU_LIMIT=1.0
SANDBOX_TIMEOUT=300

# -----------------------------------------------------------------------------
# Configuración de Monitoring (opcional)
# -----------------------------------------------------------------------------
# Habilitar métricas de Prometheus
ENABLE_PROMETHEUS=false

# Puerto de métricas
METRICS_PORT=9090

# Password para Grafana
GRAFANA_PASSWORD=admin

# -----------------------------------------------------------------------------
# Configuración de Desarrollo
# -----------------------------------------------------------------------------
# Modo debug (más logging, sin timeouts estrictos)
DEBUG_MODE=false

# Habilitar recarga automática en desarrollo
AUTO_RELOAD=false

# Directorio de pruebas
TEST_DIRECTORY=./tests

# -----------------------------------------------------------------------------
# Configuración Avanzada
# -----------------------------------------------------------------------------
# Número máximo de workers para procesamiento paralelo
MAX_WORKERS=4

# Tamaño del pool de conexiones
CONNECTION_POOL_SIZE=10

# Intervalo de limpieza de caché (segundos)
CACHE_CLEANUP_INTERVAL=3600

# Habilitar compresión de respuestas
ENABLE_COMPRESSION=true

# Configuración de CORS para API (dominios separados por comas)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# -----------------------------------------------------------------------------
# Configuración de Backup
# -----------------------------------------------------------------------------
# Habilitar backups automáticos
ENABLE_AUTO_BACKUP=true

# Intervalo de backup (horas)
BACKUP_INTERVAL=24

# Directorio de backups
BACKUP_DIRECTORY=./data/backups

# Número máximo de backups a mantener
MAX_BACKUPS=7
