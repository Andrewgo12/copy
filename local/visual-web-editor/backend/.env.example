# Visual Web Editor Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3002

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# AI Agent Configuration
LOCAL_AI_AGENT_URL=http://localhost:8000
AI_TIMEOUT=30000

# Database Configuration (for future implementation)
# DATABASE_URL=mongodb://localhost:27017/visual-web-editor
# DATABASE_NAME=visual_web_editor

# Redis Configuration (for future implementation)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=

# Email Configuration (for future implementation)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# FROM_EMAIL=noreply@visualwebeditor.com
# FROM_NAME=Visual Web Editor

# File Upload Configuration
MAX_FILE_SIZE=50mb
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,svg,json,pdf

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
SESSION_SECRET=your-session-secret-change-in-production

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=5242880
LOG_FILE_MAX_FILES=5

# CORS Configuration
CORS_ORIGIN=http://localhost:3002
CORS_CREDENTIALS=true

# SSL Configuration (for production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Cloud Storage Configuration (for future implementation)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=visual-web-editor-assets

# Monitoring Configuration (for future implementation)
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_COLLABORATION=false
ENABLE_ANALYTICS=false
ENABLE_2FA=false

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600

# Development Configuration
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=true
MOCK_AI_RESPONSES=false
