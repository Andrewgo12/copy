# Visual Web Editor AI Agent Environment Configuration

# Server Configuration
FLASK_ENV=development
HOST=localhost
PORT=8000
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# AI Configuration
MODEL_PATH=./models
ENABLE_GPU=False
MAX_WORKERS=4
MODEL_CACHE_SIZE=1000

# Performance Configuration
CACHE_ENABLED=True
CACHE_TTL=3600
REQUEST_TIMEOUT=30
MAX_REQUEST_SIZE=50MB

# Security Configuration
API_KEY=your-api-key-optional
CORS_ORIGINS=http://localhost:3002,http://localhost:3001
RATE_LIMIT_ENABLED=True

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/ai-agent.log
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=True

# Model Configuration
NLP_MODEL=en_core_web_sm
VISION_MODEL_PATH=./models/vision
CODE_MODEL_PATH=./models/code
DESIGN_MODEL_PATH=./models/design

# Processing Configuration
MAX_IMAGE_SIZE=10MB
MAX_CODE_LENGTH=100000
MAX_ELEMENTS_COUNT=1000
PROCESSING_TIMEOUT=60

# Feature Flags
ENABLE_VISUAL_REPLICATION=True
ENABLE_CODE_GENERATION=True
ENABLE_DESIGN_ANALYSIS=True
ENABLE_TEMPLATE_GENERATION=True
ENABLE_MODEL_TRAINING=False

# Development Configuration
ENABLE_PROFILING=False
ENABLE_METRICS=True
METRICS_PORT=9090

# GPU Configuration (if available)
CUDA_VISIBLE_DEVICES=0
TORCH_DEVICE=cpu

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30
METRICS_COLLECTION_ENABLED=True
ERROR_REPORTING_ENABLED=True

# Data Configuration
DATA_RETENTION_DAYS=30
TEMP_FILE_CLEANUP_HOURS=24
MODEL_UPDATE_CHECK_HOURS=168
